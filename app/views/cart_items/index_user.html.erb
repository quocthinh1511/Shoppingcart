
  <div class="container mt-5">
        <div class="d-flex justify-content-center row">
            <div class="col-md-10">
                <div class="rounded">
                    <div class="table-responsive table-borderless">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="text-center">
                                        <div class="toggle-btn">
                                            <div class="inner-circle"></div>
                                        </div>
                                    </th>
                                    <th>Order </th>
                                    <th>Product Name</th>
                                    <th>Status</th>
                                    <th>Quantity</th>
                                    <th>Unit Price</th>
                                    <th>Order Time</th>
                                    <th>Update time</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody class="table-body">
                        
                          <% @cart_items.each do |order| %>
                                <tr class="cell-1">
                                    <td class="text-center">
                                        <div class="toggle-btn">
                                            <div class="inner-circle"></div>
                                        </div>
                                    </td>
                                     <%  if order.total_price =nil %>
                                    <%'There are no orders here. Lets shopping'%>
                                    <%else%>
                                    <td><%=order.id%></td>
                                    <td><%= Product.all.find_by(id: order.product_id).name %></td>
                                    <td><span class="badge badge-danger black"> 
                                    <% if order.order_status.nil?%>
                                            <%= "Processing" %>   
                                    <%else%>
                                          <%= order.order_status %>             
                                    <%end%>
                                    </span></td>
                                    <td><%= order.quantity %></td>
                                    <td><%= order.unit_price %></td>
                                    <td><%= order.created_at%> 
                                     <% if current_user.role ==2  %>
                                <%= button_to "delete", order, method: :delete,
                              data: { confirm: "You sure?" } %>
                              <% end %></td>
                                <td><%= order.updated_at %></td>
                                    <td><i class="fa fa-ellipsis-h text-black-50"></i></td>         
                                </tr>
                                 <% end %>
                                 <% end %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
  </div>
