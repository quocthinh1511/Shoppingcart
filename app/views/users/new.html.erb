<% provide(:title, 'Sign up') %>
<h1><span class= 'textnewwww ' > <i class="uil uil-visual-studio margin-rightt"></i>Sign Up </span> </h1>
<%= render 'shared/error_messages' %>
 <img src="https://img5.thuthuatphanmem.vn/uploads/2021/12/28/hinh-nen-cuon-sach-4k_012550501.jpg" class="imgsign" alt="..."> </img>
<div class="col-md-6 col-md-offset-3 leftt">
<%= form_with(model: @user, local: true) do |f| %>

<i class="uil uil-user"></i>
<%= f.label :name %>
<%= f.text_field :name, class: 'form-control sizee',placeholder: "Enter name" %>
<i class="uil uil-fast-mail"></i>
<%= f.label :email %>
<%= f.email_field :email, class: 'form-control sizee',placeholder: "Enter email" %>
<i class="uil uil-keyhole-square"></i>
<%= f.label :password %>
<%= f.password_field :password, class: 'form-control sizee', placeholder: "Enter password " %>
<i class="uil uil-keyhole-square"></i>
<%= f.label :password_confirmation, "Confirmation" %>
<%= f.password_field :password_confirmation, class: 'form-control sizee',placeholder: "Enter password again"  %>
<%= f.submit "Create my account",class: "btn btn-primary sizee" %>
<% end %>
</div>
